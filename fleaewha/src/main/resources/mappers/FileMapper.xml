<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.epro.fleaewha.mapper.FileMapper">
    <select id="getFile" resultType="kr.or.epro.fleaewha.dto.File">
        select
            fileID,
            productID,
           	fileURL,
           	type
        from
            File
        where
        	fileID = #{fileID}
    </select>
    
    <insert id="addFile" parameterType="kr.or.epro.fleaewha.dto.File">
         INSERT INTO File (
       		fileID, productID, fileURL, type
       ) VALUES (
       		#{fileID},
       		#{productID},
       		#{fileURL},
       		#{type}
       )
    </insert>
    
    <delete id="deleteFile" parameterType="int">
    	DELETE FROM
    		File
    	WHERE
    		fileID = #{fileID} 
    </delete>
</mapper>